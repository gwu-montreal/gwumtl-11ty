{
  "name": "gwumtl-11ty",
  "homepage": "https://gwumtl.com",
  "repository": "gwu-montreal/gwumtl-11ty",
  "twitter": "@gwu_montreal",
  "scripts": {
    "clean": "rimraf _site",
    "serve": "npm-run-all clean -p serve:*",
    "serve:eleventy": "eleventy --serve",
    "serve:css": "postcss src/_build/css/init.css -o _site/style.css -w",
    "build": "cross-env NODE_ENV=production run-s clean build:*",
    "build:eleventy": "eleventy",
    "build:css": "postcss src/_build/css/init.css -o _site/style.css",
    "test": "run-p -cl test:*",
    "test:eslint": "eslint --color *.js 'src/**/*.js'",
    "test:prettier": "prettier -l *.js 'src/**/*.{js,html}'",
    "prettier": "prettier --write *.js 'src/**/*.{js,html}'"
  },
  "devDependencies": {
    "@11ty/eleventy": "2.0.0-canary.16",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "eleventy-plugin-i18n": "^0.1.3",
    "eleventy-plugin-metagen": "^1.7.11",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "graceful-fs": "^4.2.10",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-container": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-each": "^1.1.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2"
  }
}
